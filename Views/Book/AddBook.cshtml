@using BookInventory.Models
@using BookInventory.Models.DTOs

@model AddBookViewModel
<style>
    .modal-footer {
        justify-content: flex-start !important;
        text-align: left;
        margin-top: 20px;
    }
</style>

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("AddBook", "Book", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))

        {
            @Html.AntiForgeryToken()

            <div class="modal-header">
                <h5 class="modal-title">@Model.GetModalTitle()</h5>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    @Html.LabelFor(model => model.BookDTO.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.BookDTO.Title, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BookDTO.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BookDTO.Author, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.BookDTO.Author, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BookDTO.Author, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BookDTO.Genre, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.BookDTO.Genre, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BookDTO.Genre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BookDTO.PublicationDate, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.BookDTO.PublicationDate, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BookDTO.PublicationDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BookDTO.ISBN, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.BookDTO.ISBN, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BookDTO.ISBN, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">Add Book</button>
                    <a id="btnCancel" href="@Url.Action("Index", "Book")" data-dismiss="modal" class="btn btn-sm btn-secondary ms-2">Cancel</a>
                </div>
            </div>
        }
    </div>
</div>